<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    @{
        var kendoVersion = "2014.1.318";
    }

    @Styles.Render(string.Format("~/Content/css/kendo/{0}/kendo.default.min.css", kendoVersion))
    @Styles.Render(string.Format("~/Content/css/kendo/{0}/kendo.common.min.css", kendoVersion))
    @Styles.Render("~/Content/css/bootstrap-rtl.css")
    @Styles.Render("~/Content/css/Site.css")
    @Styles.Render("~/Content/css/style_responsive.css")
    @Styles.Render("~/Content/css/sb-admin-2.css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/js/scripts.js")

  

    @Scripts.Render(string.Format("~/Scripts/kendo/{0}/kendo.web.min.js", kendoVersion))
    @Scripts.Render(string.Format("~/Scripts/kendo/{0}/fa-IR.js", kendoVersion))
    @Scripts.Render(string.Format("~/Scripts/kendo/{0}/JalaliDate.js", kendoVersion))
    @Scripts.Render(string.Format("~/Scripts/kendo/{0}/kendo.core.js", kendoVersion))
    @Scripts.Render(string.Format("~/Scripts/kendo/{0}/kendo.calendar.js", kendoVersion))
    @Scripts.Render(string.Format("~/Scripts/kendo/{0}/kendo.popup.js", kendoVersion))
    @Scripts.Render(string.Format("~/Scripts/kendo/{0}/kendo.datepicker.js", kendoVersion))
    

    @RenderSection("scripts", required: false)
    </head>
    <body class="fixed-top">
        <!-- /Logo Bar Start-->
        <div id="header" class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">

                <div class="container-fluid" dir="ltr">
                    <img title="" alt=@CaptionResource.AppName src="@Url.Content("~/Content/img/icon.png")" height="45">

                </div>
                <!-- /Logo Bar End-->
            </div>
        </div>

        <div id="container" class="row-fluid">
            <div id="sidebar" class="nav-collapse">
                <div class="sidebar-toggler">
                </div>
                <ul id="side-menu" class="sidebar-menu">
                   <li class="has-sub">
                        <a href="javascript:;">
                            <span class="icon-box">
                                <i class="glyphicon glyphicon-th"></i>
                            </span>
                            @CaptionResource.Definition
                            <span class="arrow"></span>
                        </a>
                        <ul class="sub">
                            <li>
                                <a class="" href="/Setting/Index">
                                    @CaptionResource.Setting
                                </a>
                            </li>

                            <li>
                                <a class="@(ViewBag.CurrMenu == "Road"? "Active" : "" )" href="/Area/Index">@CaptionResource.Areas</a>
                            </li>
                            <li>
                                <a class="" href="/Road/Index">@CaptionResource.Roads</a>
                            </li>
                        </ul>

                    </li>



                    <li>
                        <a class="@(ViewBag.CurrMenu == "Report"? "Active" : "" )" href="/Report/Index">
                            <span class="icon-box">
                                <i class="glyphicon glyphicon-th"></i>
                            </span>
                            @CaptionResource.Map
                        </a>
                    </li>
                    @*<li class="has-sub">
                    <a href="javascript:;">
                        <span class="icon-box">
                            <i class="glyphicon glyphicon-map-marker"></i>
                        </span>
                        @CaptionResource.PointAnalaizing
                        <span class="arrow"></span>
                    </a>
                    <ul class="sub">
                        <li>
                            <a class="@(ViewBag.CurrMenu == "Order"? "Active" : "" )" href="/Order/Index">@CaptionResource.Order</a>
                        </li>
                        <li>
                            <a class="" href="#">@CaptionResource.Customer</a>
                        </li>
                        <li>
                            <a class="" href="#">@CaptionResource.Good</a>
                        </li>
                    </ul>

                </li>*@


                    @*<li>
                <a class="" href="/Order/Index">
                    <span class="icon-box">
                        <i class=" 	glyphicon glyphicon-map-marker"></i>
                    </span>
                    @CaptionResource.PointAnalaizing
                </a>
            </li>*@
                    <li>
                        <a href="/Supperviser/Index">
                            <span class="icon-box">
                                <i class="glyphicon glyphicon-random"></i>
                            </span>
                            @CaptionResource.Supperviser
                        </a>
                    </li>
                    <li>
                        <a href="/Visitor/Index">
                            <span class="icon-box">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                            @CaptionResource.Visitor
                        </a>
                    </li>
                </ul>

            </div>

            <div id="main-content">
                <div class="container-fluid">
                    <div class="row-fluid">
                            @RenderBody()
                    </div>
                </div>
            </div>
            <footer>
                <p>&copy; @DateTime.Now.Year - @CaptionResource.AppName</p>
            </footer>
        </div>
        <script>jQuery(document).ready(function () { App.init(); });</script>

</body>
</html>
