<!-- Modal -->
<div id="pnl_customer" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@CaptionResource.Customer</h4>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                        <div class="col-md-4">
                            @Html.Label(CaptionResource.CustomerGroup, new { @class = "control-label" })
                        </div>
                        <div class="col-md-8">
                            @Html.DropDownList("ddl_customergroup",
                                    new SelectList(
                                        Model.AvailableCustomerGroup,
                                        "Value",
                                        "Text"
                                        ), new { @id = "ddl_customergroup", @class = "form-control" })
                        </div>
                    </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        @Html.Label(CaptionResource.Customer, new { @class = "control-label" })
                    </div>
                    <div class="col-md-8">
                        <select class="form-control" id="ddl_customer"></select>
                    </div>
                </div>
                
                <div class="form-group row">
                        <div class="col-md-4">
                            @Html.Label(CaptionResource.Activity, new { @class = "control-label" })
                        </div>
                        <div class="col-md-8">

                            @Html.DropDownList("ddl_activity",
                                    new SelectList(Model.AvailableActivity,
                                        "Value", "Text"), new { @id = "ddl_activity", @class = "form-control" })

                        </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        @Html.Label(CaptionResource.Address, new { @class = "control-label" })
                    </div>
                    <div class="col-md-8">
                        @Html.TextBox("txt_address", "", new { @class = "form-control", @id = "txt_address", })
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btn_customer_chk">@CaptionResource.Check</button>
                <button type="button" class="btn btn-default" id="btn_customer_not_chk">@CaptionResource.NotCheck</button>
            </div>
        </div>

    </div>
</div>