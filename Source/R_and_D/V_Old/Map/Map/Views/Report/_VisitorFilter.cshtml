
<!-- Modal -->
<div id="pnl_visitor" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@CaptionResource.Visitor</h4>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                        <div class="col-md-4">
                            @Html.Label(CaptionResource.VisitorGroup, new { @class = "control-label" })

                        </div>
                        <div class="col-md-8">
                            @Html.DropDownList("ddl_visitorgroup",
                                    new SelectList(
                                        Model.AvailableVisitorGroup,
                                        "Value",
                                        "Text"), new { @id = "ddl_visitorgroup", @class = "form-control" })
                        </div>
                 </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        @Html.Label(CaptionResource.Visitor, new { @class = "control-label" })
                    </div>
                    <div class="col-md-8">
                        <select class="form-control" id="ddl_visitor"></select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        @Html.CheckBox("chk_visitor_path", false, new { @id = "chk_visitor_path", @class = "control-label" })
                        @Html.Label(CaptionResource.Path, new { @class = "control-label" })
                    </div>
                    <div class="col-md-8">
                    </div>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btn_visitor_chk">@CaptionResource.Check</button>
                <button type="button" class="btn btn-default" id="btn_visitor_not_chk">@CaptionResource.NotCheck</button>
            </div>
        </div>

    </div>
</div>