
@using Jmelosegui.Mvc.GoogleMap


@Scripts.Render("~/Scripts/view/visitor.js")
@(Html.GoogleMap().ScriptRegistrar(scripts => scripts.Add("jmelosegui.googlemap.js")))

@model TrackingMap.Models.VisitorConditionModel

<div class="panel panel-default panel-main">
    <div class="options-bar">
        <div class="form-group row ">

            <div class="col-md-12">
                <div class="right">
                    <button id='btn_run' class='btn btn-default'>@CaptionResource.Run</button>
                </div>
            </div>

        </div>
    </div>

    <div class="panel-body">
        
        <div class="col-md-3">
            <div class="side-bar">
                <div id="pnl_condition" class="frame-condition">
                    <div>
                        @Html.Label(CaptionResource.Date, new { @class = "control-label" })
                        <input type="text" id="dte_date" />
                    </div>
                    <div>
                        @Html.CheckBox("chk_daily_path", false, new { @id = "chk_daily_path", @class = "control-label" })
                        @Html.Label(CaptionResource.DailyPath, new { @class = "control-label" })

                        @Html.CheckBox("chk_visitor_path", true, new { @id = "chk_visitor_path", @class = "control-label" })
                        @Html.Label(CaptionResource.VisitorPath, new { @class = "control-label" })
                    </div>
                    <div>
                        <button id='btn_marker' class='btn btn-default'><span id="spn_marker" class='glyphicon glyphicon-chevron-down'></span>@CaptionResource.Markers</button>
                    </div>
                    <div id="pnl_marker" class="frame-border">
                        @Html.CheckBox("chk_order", false, new { @id = "chk_order", @class = "control-label" })
                        @Html.Label(CaptionResource.Order, new { @class = "control-label" })
                        <br />
                        @Html.CheckBox("chk_lack_order", false, new { @id = "chk_lack_order", @class = "control-label" })
                        @Html.Label(CaptionResource.LackOfOrder, new { @class = "control-label" })
                        <br />
                        @Html.CheckBox("chk_lack_visit", false, new { @id = "chk_lack_visit", @class = "control-label" })
                        @Html.Label(CaptionResource.LackOfVisit, new { @class = "control-label" })
                        <br />
                        @Html.CheckBox("chk_without_activity", false, new { @id = "chk_without_activity", @class = "control-label" })
                        @Html.Label(CaptionResource.WithoutActivity, new { @class = "control-label" })
                        <br />
                        @Html.CheckBox("chk_wait", false, new { @id = "chk_wait", @class = "control-label" })
                        @Html.Label(CaptionResource.WaitWithoutCustomer, new { @class = "control-label" })
                    </div>
                    <br/>
                    <div>
                        @Html.DropDownList("ddl_visitor_group",
                            new SelectList(
                                Model.AvailableVisitorGroup,
                                         "Value", "Text"), new { @id = "ddl_visitor_group", @class = "form-control" })
                    </div>
                </div>
                <div id="pnl_Visitor">
                    <div id="grid_visitor" class="full-width"></div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div id="Report_Frame" class="frame-map">
                <div id="mapContainer"> </div>                
            </div>
        </div>

    </div>

</div>
